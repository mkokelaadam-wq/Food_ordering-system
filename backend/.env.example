# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=5000
NODE_ENV=development
HOST=localhost
API_VERSION=v1
API_PREFIX=/api
FRONTEND_URL=http://localhost:3000
CLIENT_URL=http://localhost:5500
TRUST_PROXY=1

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password_here
DB_NAME=food_express_db
DB_CONNECTION_LIMIT=20
DB_QUEUE_LIMIT=0
DB_CONNECT_TIMEOUT=10000
DB_ACQUIRE_TIMEOUT=10000
DB_MAX_IDLE=10
DB_IDLE_TIMEOUT=60000
DB_SSL=false
DB_MULTIPLE_STATEMENTS=false
DB_CHARSET=utf8mb4

# ============================================
# JWT & AUTHENTICATION
# ============================================
JWT_SECRET=your_super_secure_jwt_secret_key_2024_change_in_production
JWT_ACCESS_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d
JWT_RESET_PASSWORD_EXPIRATION=1h
JWT_VERIFY_EMAIL_EXPIRATION=24h
JWT_ISSUER=foodexpress-api
JWT_AUDIENCE=foodexpress-app
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_key_change_this

# ============================================
# EMAIL CONFIGURATION (for password reset)
# ============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_FROM=noreply@foodexpress.com
EMAIL_FROM_NAME=Food Express
EMAIL_SECURE=false
EMAIL_LOGGING=true

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp
UPLOAD_PATH=./public/uploads
STATIC_PATH=./public
PROFILE_UPLOAD_PATH=./public/uploads/profiles
MENU_UPLOAD_PATH=./public/uploads/menu
RESTAURANT_UPLOAD_PATH=./public/uploads/restaurants

# ============================================
# RATE LIMITING & SECURITY
# ============================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100           # 100 requests per window
RATE_LIMIT_MESSAGE=Too many requests, please try again later
CORS_ORIGIN=http://localhost:3000,http://localhost:5500,https://mkokelaadam-wq.github.io
CORS_CREDENTIALS=true
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_NAME=Food Express
APP_URL=http://localhost:5000
APP_DESCRIPTION=Online Food Ordering System
APP_VERSION=1.0.0
APP_CONTACT_EMAIL=support@foodexpress.com
APP_CONTACT_PHONE=+255712345678
APP_ADDRESS=Samora Avenue, Dar es Salaam, Tanzania

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=debug
LOG_TO_FILE=true
LOG_DIR=./logs
LOG_MAX_SIZE=10485760  # 10MB
LOG_MAX_FILES=5
LOG_FORMAT=combined

